<div id="top-container" class="container-fluid">
    <h1 id="main-title" class="text-center">The bests jobs are here!</h1>
    <p  id="main-subtitle" class="text-center">
        We are the site with the most technology jobs on the market, directed to the home office.
    </p>
    <form id="search-form" class="form-inline" action="/" method="GET">
        <div class="form-group col-md-10">
            <input type="text" class="form-control" id="job" name="job" placeholder="Type the job that you want search">
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-danger">
                <i class="gg-search"></i> Search
            </button>
        </div>
    </form>
</div>
<main>
    <div class="container" id="jobs-container">
        <div class="row">
            <div class="col-md-12">
                
                {{#if search}}
                    <h2 id="job-list-title">Searching for: {{search}}</h2>
                {{else}}
                    <h2 id="job-list-title">See our featured jobs...</h2>
                {{/if}}
                <ul id="job-list" class="list-group">
                    {{#each jobs}}
                    <li class="list-group-item {{#if dataValues.new_job }} new-job {{/if}}">
                        <img src="/img/company.svg" alt="Company image">
                        <p>{{dataValues.company}}</p>
                        <h3>{{dataValues.title}}</h3>
                        <p>R${{dataValues.salary}}</p>
                        <span class="new-job-label">New</span>
                        <a class="btn btn-danger text-light" href="/jobs/view/{{dataValues.id}}">See job</a>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</main>